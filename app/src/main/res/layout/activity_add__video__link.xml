<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF"
    tools:context="com.example.user.kidbox.Add_Video_Link">

<TableLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_weight="2">
    <TableRow>
        <ImageButton

            android:paddingTop="@dimen/activity_horizontal_margin"
            android:layout_alignLeft="@+id/youtubelogo"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:id="@+id/finger"
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/one_finger"/>

        <ImageButton
            android:id="@+id/youtubelogo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:background="#FFFFFF"
            android:contentDescription="@string/Ok"
            android:foregroundGravity="center"
            android:src="@mipmap/youtube"/>

</TableRow>

</TableLayout>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">
    <EditText

        android:gravity="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Paste Link"/>

    <Button
        android:id="@+id/done"
        android:layout_marginTop="100dip"
        android:layout_width="match_parent"
        android:textColor="@color/colorDone"
        android:layout_height="wrap_content"
        android:text="@string/Ok"
        android:layout_below="@id/autoCompleteTextView"/>
</LinearLayout>

</LinearLayout>
